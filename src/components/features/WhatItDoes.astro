---

<section class={cn(
  'py-20 sm:py-24 lg:py-28'
)}>
  <div class="container-custom">
    <!-- Section header -->
    <div class="mb-16 sm:mb-20">
      <p class={cn(
        'section-label mb-4 flex items-center gap-2',
        'text-xs font-bold uppercase tracking-widest',
        'text-brand-accent'
      )}>
        <span>&gt;</span>
        <span>What It Does</span>
      </p>
      <h2 class={cn(
        'font-bold tracking-tight',
        'text-4xl sm:text-5xl lg:text-6xl'
      )}>
        Powerful capabilities, your way
      </h2>
    </div>

    <!-- Feature grid (3 columns, 2 rows) - old site style -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        features.map((feature) => (
          <div class="feature-card rounded-2xl px-6 py-7">
            <!-- Icon in yellow bg box (rgba(251, 191, 36, 0.06)) -->
            <div
              class="feature-icon-box w-11 h-11 rounded-xl mb-3.5 flex items-center justify-center text-2xl leading-none"
              aria-hidden="true"
            >
              {feature.icon}
            </div>

            <!-- Title -->
            <h3 class="font-semibold text-base mb-2 text-brand-text">
              {feature.title}
            </h3>

            <!-- Description -->
            <p class="text-xs sm:text-sm text-brand-text-muted leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Exact match to old site feature-card styling */
  .feature-card {
    background: #1a1d27;
    border: 1px solid rgba(255, 255, 255, 0.06);
    transition: all 0.2s ease;
  }

  .feature-card:hover {
    background: #222633;
    border-color: rgba(251, 191, 36, 0.15);
  }

  .feature-icon-box {
    background: rgba(251, 191, 36, 0.06);
    transition: background 0.2s ease;
  }

  .feature-card:hover .feature-icon-box {
    background: rgba(251, 191, 36, 0.1);
  }
</style>
