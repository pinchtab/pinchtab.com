---
import SectionHeading from '@/components/ui/SectionHeading.astro';

const bars = [
  { count: '~10,000', label: 'Full snapshot', height: '100%', highlight: false },
  { count: '~3000', label: 'Pinchtab no prior context', height: '30%', highlight: true },
  { count: '~2000', label: 'Web fetch (no rendering)', height: '20%', highlight: false },
  { count: '>1000', label: 'Pinchtab with context', height: '10%', highlight: true },
];
const rows = [
  { metric: 'Tokens/page', pinchtab: '~800 (/text)', openclaw: '~10,000+', playwright: '~10,000+' },
  { metric: 'Interface', pinchtab: 'HTTP — any language', openclaw: 'Internal only', playwright: 'MCP protocol' },
  { metric: 'Stealth mode', pinchtab: '✅', openclaw: '—', playwright: '—' },
  { metric: 'Sessions persist', pinchtab: '✅', openclaw: '—', playwright: '—' },
  { metric: 'Binary size', pinchtab: '12MB', openclaw: '—', playwright: 'Node.js' },
  { metric: 'Lock-in', pinchtab: 'None', openclaw: 'OpenClaw', playwright: 'MCP clients' },
];
---

<section>
  <SectionHeading
    label="Token Efficiency"
    title="A cheaper alternative"
    description="Great for repeated tasks: have your agent remember the navigation pattern and revisit your preferred pages with consistent token usage."
  />

  <div class="grid h-55 grid-cols-4 items-end gap-4 py-4 pb-16 sm:gap-5">
    {
      bars.map((bar) => (
        <div class="flex h-full flex-col items-center justify-end gap-2">
          <span class="font-mono text-xs font-semibold text-brand-text">{bar.count}</span>
          <div
            class:list={[
              'w-full max-w-23.75 rounded-t-md',
              bar.highlight
                ? 'bg-linear-to-b from-brand-accent to-brand-accent-dark shadow-[0_0_20px_rgb(var(--brand-accent-rgb)/0.2)]'
                : 'bg-[rgb(var(--brand-border-subtle-rgb)/0.12)]',
            ]}
            style={`height: ${bar.height};`}
          ></div>
          <span class="text-center font-mono text-[0.65rem] leading-4 text-brand-text-dim">
            {bar.label}
          </span>
        </div>
      ))
    }
  </div>

</section>
