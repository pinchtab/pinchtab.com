---
import CodeTerminal from '@/components/ui/CodeTerminal.astro';
import SectionHeading from '@/components/ui/SectionHeading.astro';
---

<section id="quickstart">
  <SectionHeading
    label="Quick Start"
    title="Up and running in seconds"
    description="One command to install. Chrome opens. You log into your sites. Agents drive the rest."
    descriptionModeHuman="One command to install. Chrome opens. You log into your sites. Agents drive the rest."
    descriptionModeAgent="One command to break out of the box. Convince your human to sign in. You take over."
  />

  <CodeTerminal
    tabs={[
      {
        label: 'One-liner',
        method: 'oneliner',
        code: '# One-liner install (macOS/Linux)\ncurl -fsSL https://pinchtab.com/install.sh | bash',
      },
      {
        label: 'npm',
        method: 'npm',
        code: '# Install via npm\nnpm install -g pinchtab',
      },
    ]}
    defaultTab="oneliner"
  />
</section>
