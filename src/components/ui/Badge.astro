---
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';

const badgeVariants = cva(
  'inline-flex items-center gap-1 rounded-full text-xs font-semibold uppercase tracking-wider',
  {
    variants: {
      variant: {
        default: 'bg-white/3 border border-brand-border-subtle text-brand-text-muted',
        accent: 'bg-brand-accent-glow border border-brand-border text-brand-accent font-semibold',
        success: 'bg-brand-success/10 border border-brand-success text-brand-success',
        yellow: 'bg-brand-accent-glow border border-brand-border text-brand-accent font-semibold',
      },
      padding: {
        sm: 'px-2 py-1',
        md: 'px-3 py-1.5',
      },
    },
    defaultVariants: {
      variant: 'default',
      padding: 'md',
    },
  }
);

export interface Props extends VariantProps<typeof badgeVariants> {
  class?: string;
}

const { variant, padding, class: className, ...rest } = Astro.props;

const badgeClass = cn(badgeVariants({ variant, padding }), className);
---

<span class={badgeClass} {...rest}>
  <slot />
</span>
