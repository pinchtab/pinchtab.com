---
import { cn } from '@/lib/utils';

export interface Props {
  label: string;
  title: string;
  titleModeHuman?: string;
  titleModeAgent?: string;
  description?: string;
  descriptionModeHuman?: string;
  descriptionModeAgent?: string;
  class?: string;
  titleClass?: string;
  descriptionClass?: string;
}

const {
  label,
  title,
  titleModeHuman,
  titleModeAgent,
  description,
  descriptionModeHuman,
  descriptionModeAgent,
  class: className,
  titleClass,
  descriptionClass,
} = Astro.props;
---

<div class={cn('mb-10 sm:mb-12', className)}>
  <p class="mb-2 flex items-center gap-2 text-[0.8rem] font-semibold uppercase tracking-[0.12em] text-brand-accent">
    <span class="text-base leading-none">&gt;</span>
    <span>{label}</span>
  </p>

  <h2
    class={cn(
      'mb-3 text-3xl font-bold leading-tight tracking-[-0.02em] text-brand-text sm:text-4xl lg:text-5xl',
      titleClass
    )}
    data-mode-text-human={titleModeHuman}
    data-mode-text-agent={titleModeAgent}
  >
    {title}
  </h2>

  {
    description && (
      <p
        class={cn('max-w-3xl text-base leading-7 text-brand-text-muted sm:text-lg', descriptionClass)}
        data-mode-text-human={descriptionModeHuman}
        data-mode-text-agent={descriptionModeAgent}
      >
        {description}
      </p>
    )
  }
</div>
