---
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';

const pillVariants = cva(
  'inline-flex items-center rounded-[20px] border text-[0.72rem] font-mono font-medium tracking-[0.01em]',
  {
    variants: {
      variant: {
        default: 'border-brand-border-subtle bg-[rgba(255,255,255,0.03)] text-brand-text-muted',
        accent: 'border-brand-border bg-brand-accent/10 text-brand-accent',
      },
      size: {
        sm: 'px-3 py-1',
        md: 'px-[14px] py-[5px]',
      },
    },
    defaultVariants: {
      variant: 'default',
      size: 'md',
    },
  }
);

export interface Props extends VariantProps<typeof pillVariants> {
  class?: string;
}

const { variant, size, class: className, ...rest } = Astro.props;

const pillClass = cn(pillVariants({ variant, size }), className);
---

<span class={pillClass} {...rest}>
  <slot />
</span>
