---
import Button from '@/components/ui/Button.astro';
import { cn } from '@/lib/utils';

const navLinks = [
  { label: 'Features', href: '/#features' },
  { label: 'GitHub', href: 'https://github.com/pinchtab' },
];
---

<header
  class={cn(
    'fixed top-0 left-0 right-0 z-100 h-16',
    'border-b border-brand-border-subtle',
    'bg-brand-bg/85 backdrop-blur-2xl'
  )}
>
  <div class="container-custom h-full flex items-center justify-between gap-8">
    <!-- Logo -->
    <a
      href="/"
      class="flex items-center gap-2 font-bold text-lg tracking-tight hover:opacity-75 transition-opacity"
      aria-label="Pinchtab home"
    >
      <img src="/favicon.png" alt="" class="w-8 h-8 rounded-sm" />
      <span>Pinchtab</span>
    </a>

    <!-- Navigation -->
    <nav aria-label="Main navigation" class="hidden sm:block ml-auto">
      <ul class="flex items-center gap-6">
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class={cn(
                  'text-sm font-medium transition-colors',
                  'text-brand-text-muted hover:text-brand-text'
                )}
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <!-- CTA Button -->
    <Button
      href="https://pinchtab.com/install.sh"
      variant="primary"
      size="sm"
      class="hidden sm:inline-flex"
    >
      Install
    </Button>
  </div>
</header>
