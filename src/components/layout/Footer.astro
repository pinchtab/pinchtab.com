---
import { cn } from '@/lib/utils';

const footerLinks = [
  { label: 'Features', href: '/#features' },
  { label: 'Install', href: 'https://pinchtab.com/install.sh' },
  { label: 'GitHub', href: 'https://github.com/pinchtab' },
];

const currentYear = new Date().getFullYear();
---

<footer
  class={cn(
    'py-16 bg-brand-bg'
  )}
>
  <div class="container-custom">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-8">
      <!-- Brand -->
      <div class="flex items-center gap-3">
        <img src="/favicon.png" alt="" class="w-8 h-8 rounded-sm" />
        <span class="font-bold text-lg">Pinchtab</span>
      </div>

      <!-- Links -->
      <nav aria-label="Footer navigation" class="flex gap-6">
        {
          footerLinks.map((link) => (
            <a
              href={link.href}
              class={cn(
                'text-sm transition-colors',
                'text-brand-text-muted hover:text-brand-accent'
              )}
            >
              {link.label}
            </a>
          ))
        }
      </nav>

      <!-- Copyright -->
      <p class="text-xs text-brand-text-dim order-last sm:order-none w-full sm:w-auto text-center sm:text-right">
        &copy; {currentYear} Pinchtab. All rights reserved.
      </p>
    </div>
  </div>
</footer>
