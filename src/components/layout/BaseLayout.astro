---
import Footer from './Footer.astro';
import '@/styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  class?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
}

const {
  title = 'PinchTab â€” Browser Control for AI Agents',
  description = 'PinchTab gives AI agents precise, reliable control over browsers. Automate the web at a new level.',
  class: pageClass,
  canonical,
  ogImage = '/og-image.png',
  ogType = 'website',
} = Astro.props;

const siteUrl = Astro.site ? Astro.site.toString().replace(/\/$/, '') : Astro.url.origin;
const canonicalUrl = canonical ? new URL(canonical, siteUrl).toString() : new URL(Astro.url.pathname, siteUrl).toString();
const ogImageUrl = new URL(ogImage, siteUrl).toString();

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'Pinchtab',
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'macOS, Linux, Windows',
  description: 'Browser control for AI agents. 12MB Go binary, zero config, accessibility-first HTTP API.',
  url: siteUrl,
  downloadUrl: 'https://github.com/pinchtab/pinchtab/releases/latest',
  softwareVersion: 'latest',
  license: 'https://opensource.org/licenses/MIT',
  programmingLanguage: 'Go',
  author: {
    '@type': 'Person',
    name: 'Luigi Agosti',
    url: 'https://github.com/luigi-agosti',
  },
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Luigi Agosti" />
    <meta
      name="keywords"
      content="browser automation, AI agents, Go binary, accessibility tree, HTTP API, web scraping, Chrome DevTools, stealth mode, OpenClaw, chromedp"
    />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:site_name" content="Pinchtab" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content={ogType} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icon.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#fbbf24" />
    <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
    <script is:inline>
      (() => {
        const normalizeMode = (mode) => (mode === 'agent' || mode === 'agents' ? 'agent' : 'human');
        const readStoredMode = () => {
          try {
            return normalizeMode(localStorage.getItem('pinchtab-mode'));
          } catch {
            return 'human';
          }
        };

        const applyModeText = (mode) => {
          const normalizedMode = normalizeMode(mode);
          const textNodes = document.querySelectorAll('[data-mode-text-human][data-mode-text-agent]');
          textNodes.forEach((node) => {
            const nextText = normalizedMode === 'agent'
              ? node.getAttribute('data-mode-text-agent')
              : node.getAttribute('data-mode-text-human');

            if (typeof nextText === 'string') {
              node.textContent = nextText;
            }
          });
        };

        const applyModeOrder = (mode) => {
          const normalizedMode = normalizeMode(mode);
          const orderedNodes = document.querySelectorAll('[data-mode-order-human][data-mode-order-agent]');
          orderedNodes.forEach((node) => {
            const nextOrder = normalizedMode === 'agent'
              ? node.getAttribute('data-mode-order-agent')
              : node.getAttribute('data-mode-order-human');

            if (typeof nextOrder === 'string') {
              node.style.order = nextOrder;
            }
          });
        };

        const applyMode = (mode) => {
          const normalizedMode = normalizeMode(mode);
          document.documentElement.setAttribute('data-site-mode', normalizedMode);
          applyModeText(normalizedMode);
          applyModeOrder(normalizedMode);
        };

        applyMode(readStoredMode());

        document.addEventListener('modechange', (event) => {
          applyMode(event.detail.mode);
        });

        window.addEventListener('DOMContentLoaded', () => {
          applyMode(readStoredMode());
        });
      })();
    </script>
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <main class={`flex-1 ${pageClass || ''}`}>
      <slot />
    </main>
    <Footer />
    <script is:inline src="/rum.js"></script>
  </body>
</html>
