---
import Footer from './Footer.astro';
import '@/styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const {
  title = 'PinchTab â€” Browser Control for AI Agents',
  description = 'PinchTab gives AI agents precise, reliable control over browsers. Automate the web at a new level.',
  class: pageClass,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://pinchtab.com" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://pinchtab.com/og-image.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <script is:inline>
      (() => {
        let mode = 'human';

        try {
          const stored = localStorage.getItem('pinchtab-mode');
          mode = stored === 'agent' || stored === 'agents' ? 'agent' : 'human';
        } catch {
          mode = 'human';
        }

        document.documentElement.setAttribute('data-site-mode', mode);
      })();
    </script>
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <main class={`flex-1 ${pageClass || ''}`}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
